    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp">

        <com.liveness.dflivenesslibrary.view.DFGifView
            android:id="@+id/id_gv_play_action"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.liveness.dflivenesslibrary.view.CircleTimeView
            android:id="@+id/time_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            app:circle_color="@color/circle_border"
            app:circle_width="4"
            app:max_time="@integer/livenesslibrary_max_time"
            app:text_color="#ffffff"
            app:text_redus="100"
            app:text_size="20" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/anim_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/viewGroup"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="7dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/wait_time_notice"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/id_tv_count_down"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/livenesslibrary_wait_layer"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="200sp" />
    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/id_ll_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp">

            <ImageView
                android:layout_width="9dp"
                android:layout_height="16dp"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_back"
                android:contentDescription="@string/livenesslibrary_image_common_description" />
        </RelativeLayout>

        <TextView
            android:id="@+id/noteText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/black"
            android:textSize="@dimen/notice_size" />

    </RelativeLayout>

